<statcvs>
  <settings>
    <webRepository>
      http://cvs.berlios.de/cgi-bin/viewcvs.cgi/statcvs-xml/statcvs-xml2/
    </webRepository>
	<tags>^statcvs-xml-\d_\d.*</tags>
	<showImages>true</showImages>
    <projectName>StatCVS-XML</projectName>
    <outputDir>xdocs/statcvs-xml</outputDir>
    <renderer>xdoc</renderer>
<!--    <include>src/net/**/*.java</include> -->
	<include>**/*.java</include>
<!--    <include>src/de/berlios/statcvs/xml/**/*.java</include> -->
<!--    <include>xdocs/**/statcvs*.png</include> -->
    <modules type="map">
      <setting key="Report">**/report/*</setting>
      <setting key="Output">**/output/*</setting>
      <setting key="Model">**/model/*</setting>
    </modules>
    <setting key="commitlog.MostCommonCommentsTable.limit">10</setting>
    <setting key="evolution.EvolutionMatrixChart.showImagemap">true</setting>
	<suite>statcvs.xml</suite>
  </settings>

  <document  filename="branch%1" title="Branch Statistics%1" foreach="branch">
    <report class="LocChart"/>
    <report class="SizeChart" groupby="module"/>
    <report class="CommitChart" groupby="day" title="Activity"/>
    <report class="CommitChart" groupby="hour" title=""/>
    <report class="CommitLogTable" limit="10"/>
  </document>

  <document  filename="branch_stats" title="Branch Statistics">
    <report class="LocChart" groupby="branch"/>
    <report class="CommitTable" groupby="branch" orderby="loc"/>
  </document>

  <document filename="index" title="CVS Statistics">
    <report class="GeneralReport"/>
    <report class="DocumentTable"/>
    <report class="LocChart"/>
  </document>

</statcvs>
